<% pp = k(post) %>
<article class="mx-auto w-full max-w-2xl">
    <header class="mb-4 lg:mb-6 not-format">
        <address class="flex items-center mb-6 not-italic">
            <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                <img class="mr-4 w-16 h-16 rounded-full" src="<%= pp.author.avatar_url %>" alt="Jese Leos">
                <div>
                    <p href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%= pp.author.name %></p>
                    <p class="text-base text-gray-500 dark:text-white"><%= pp.author.bio %></p>
                    <p class="text-base text-gray-500  dark:text-white"><time pubdate datetime="<%= pp.published_at_iso %>" title="<%= pp.published_at %>"><%= pp.published_at %></time></p>
                </div>
            </div>
        </address>
        <% if pp.title? %>
        <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%= pp.title %></h1>
        <% end %>
    </header>
    <% if pp.image_url %>
    <figure><img src="<%= pp.image_url %>"></figure>
    <% end %>
    <div class="text-gray-900  dark:text-white">
      <%== pp.html %>
    </div>
</article>
