<% post = k("admin/post", @post) %>
<%= turbo_stream.update "preview" do %>
<div class="format">
  <% if !post.published? %>
    <h2 class="no-format font-bold text-xl text-red-700">Not published until: <%= post.published_at_with_time || "No date" %></h2>
  <% end %>
  <h1 class="no-format font-bold text-2xl <%= "underline decoration-dashed" unless post.title? %>"><%= post.title %></h1>
  <div class="bg-yellow-50 p-4">
    <%= post.summary %>
  </div>
  <hr>
  <%== post.html %>
</div>
<% end %>
