<section class="bg-gray-50 dark:bg-gray-900" data-controller="admin--time-zone">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
        <%= c 'admin/logo', url: "https://phrontpage.com", wrapped_class: "mb-6" %>
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Create Your Account
                </h1>
                <%= c 'admin/form/help', help: "This can only be used to create your first account. Once you create an account, all others need to be done via the command line." %>

                <%= form_with(class: "space-y-4 md:space-y-6", url: first_run_path) do |f| %>
                    <%= f.ef :email, label: "Your Email", value: params[:email_hint], required: true, autofocus: true %>
                    <%= f.pf :password, label: "Your Password", required: true %>
                    <%= f.cb :remember_me, label: "Remember Me", required: false %>
                    <%= f.hidden_field :time_zone, data: {"admin--time-zone-target": "timezone"} %>
                    <%= f.sb text: "Create Account" %>
                <% end %>
            </div>
        </div>
    </div>
</section>